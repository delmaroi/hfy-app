{
  "compilerOptions": {
    "allowJs": true, // include js files
    "allowSyntheticDefaultImports": true, // no errors with commonjs modules interop
    "checkJs": true, // check js files when running tsc
    "declaration": false,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react", // process JSX
    "lib": ["dom", "es5", "es6", "es7", "es2017", "es2019"],
    "module": "esnext", //commonjs destroys 'dynamic imports' which is used for code splitting
    "moduleResolution": "node",
    "noEmit": true,
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "preserveConstEnums": true,
    "pretty": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "skipLibCheck": true, // skip checking libraries (like enzyme-to-json)
    "sourceMap": true,
    "strict": true,
    "target": "es6" // using babel-loader to transpile to es5
  }
}
